<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSearchStops"
    android:background="#eeeeee">


    <ListView
        android:id="@+id/busSearchListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:background="#eeeeee"
        android:layout_below="@+id/searchViewBustopSearch" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALL BUSTOPS"
            android:background="@drawable/button"
            android:textColor="#eeeeee"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/button6"
            android:layout_weight="0.5"
            android:layout_marginRight="1dp"
            android:id="@+id/btnAllStops" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="FAVOURITES"
            android:id="@+id/btnFavourites"
            android:background="@drawable/button"
            android:textColor="#eeeeee"
            android:textSize="15dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5"
            android:layout_marginLeft="1dp"
            android:clickable="true" />

    </LinearLayout>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchViewBustopSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnBustopSearch"
        android:layout_toStartOf="@+id/btnBustopSearch">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnALertMeSearch"
            android:layout_toStartOf="@+id/btnALertMeSearch" />
    </SearchView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:id="@+id/btnBustopSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/greybutton"
        android:textColor="#eeeeee"
        android:drawableTop="@android:drawable/ic_btn_speak_now"
        android:singleLine="false"
        android:paddingTop="8dp"
        android:stateListAnimator="@null"
        android:layout_above="@+id/busSearchListView" />


</RelativeLayout>
