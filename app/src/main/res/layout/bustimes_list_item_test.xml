<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginLeft="19dp"
		android:background="@drawable/circlebusboxes"

		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginStart="19dp"
		android:layout_marginBottom="10dp"
		android:id="@+id/relativeLayout"
		android:layout_marginTop="20dp"
		android:clickable="false">

		<TextView
            android:id="@+id/txtBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_gravity="right"
            android:textSize="15dp"
            android:textColor="#ffffff"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true" />

	</RelativeLayout>

	<TextView
android:id="@+id/txtEstTime"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="00:00"
		android:textSize="10dp"
		android:layout_alignBottom="@+id/txtMinute"
		android:layout_alignLeft="@+id/txtMinute"
		android:layout_alignStart="@+id/txtMinute" />

	<TextView
android:id="@+id/txtToward"
android:layout_width="wrap_content"
android:gravity="center"
android:layout_height="wrap_content"
android:text="Somewhere"
android:textSize="15dp"
		android:textColor="#000000"
		android:layout_marginLeft="27dp"
		android:layout_marginStart="27dp"
		android:layout_alignBaseline="@+id/txtMinute"
		android:layout_alignBottom="@+id/txtMinute"
		android:layout_toRightOf="@+id/relativeLayout"
		android:layout_toEndOf="@+id/relativeLayout" />

	<TextView
android:id="@+id/txtMinute"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="0 min"
		android:textColor="@color/background_floating_material_dark"
        android:textSize="30dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignBottom="@+id/relativeLayout"
		android:layout_alignTop="@+id/relativeLayout"
		android:gravity="center"
		android:layout_marginRight="15dp" />

</RelativeLayout>
