<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBusTimer"
    android:background="#eee">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/lblNumber"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:textSize="20dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/btnStop"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:id="@+id/btn1"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn2"
                    android:layout_toLeftOf="@+id/btn5"
                    android:layout_toStartOf="@+id/btn5"
                    android:onClick="onNumberClicked"
                    android:nestedScrollingEnabled="false"
                    android:layout_column="1"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_below="@+id/lblNumber"
                    android:layout_alignLeft="@+id/btn5"
                    android:layout_alignStart="@+id/btn5"
                    android:layout_column="2"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="3"
                    android:id="@+id/btn3"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_above="@+id/btn5"
                    android:layout_alignLeft="@+id/btn9"
                    android:layout_alignStart="@+id/btn9"
                    android:layout_column="3"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="4"
                    android:id="@+id/btn4"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_above="@+id/btn6"
                    android:layout_toRightOf="@+id/btn3"
                    android:layout_toEndOf="@+id/btn3"
                    android:layout_column="4"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="5"
                    android:id="@+id/btn5"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_above="@+id/btn6"
                    android:layout_toRightOf="@+id/btn3"
                    android:layout_toEndOf="@+id/btn3"
                    android:layout_column="5"
                    android:layout_margin="1dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="6"
                    android:id="@+id/btn6"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn5"
                    android:layout_alignLeft="@+id/btn3"
                    android:layout_alignStart="@+id/btn3"
                    android:layout_column="1"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="7"
                    android:id="@+id/btn7"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_below="@+id/btn5"
                    android:layout_alignLeft="@+id/btn4"
                    android:layout_alignStart="@+id/btn4"
                    android:layout_column="2"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="8"
                    android:id="@+id/btn8"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn7"
                    android:layout_alignLeft="@+id/btn5"
                    android:layout_alignStart="@+id/btn5"
                    android:layout_column="3"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="9"
                    android:id="@+id/btn9"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn8"
                    android:layout_toRightOf="@+id/btn5"
                    android:layout_toEndOf="@+id/btn5"
                    android:layout_column="1"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="10"
                    android:id="@+id/btn10"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_above="@+id/btn6"
                    android:layout_toRightOf="@+id/btn3"
                    android:layout_toEndOf="@+id/btn3"
                    android:layout_column="5"
                    android:layout_margin="1dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="11"
                    android:id="@+id/btn11"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn5"
                    android:layout_alignLeft="@+id/btn3"
                    android:layout_alignStart="@+id/btn3"
                    android:layout_column="1"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="12"
                    android:id="@+id/btn12"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn5"
                    android:layout_alignLeft="@+id/btn3"
                    android:layout_alignStart="@+id/btn3"
                    android:layout_column="2"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="13"
                    android:id="@+id/btn13"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn5"
                    android:layout_alignLeft="@+id/btn3"
                    android:layout_alignStart="@+id/btn3"
                    android:layout_column="3"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="14"
                    android:id="@+id/btn14"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn5"
                    android:layout_alignLeft="@+id/btn3"
                    android:layout_alignStart="@+id/btn3"
                    android:layout_column="4"
                    android:layout_margin="1dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="15"
                    android:id="@+id/btn15"
                    android:background="@drawable/button"
                    android:textColor="#fff"
                    android:layout_alignTop="@+id/btn5"
                    android:layout_alignLeft="@+id/btn3"
                    android:layout_alignStart="@+id/btn3"
                    android:layout_column="5"
                    android:layout_margin="1dp" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ringer"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/switchRinger"
            android:layout_toStartOf="@+id/switchRinger"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchRinger"
            android:checked="true"
            android:thumb="@drawable/zaksredtheme_scrubber_control_selector_holo_light"
            android:track="@drawable/track_bg"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchVibration"
            android:checked="true"
            android:thumb="@drawable/zaksredtheme_scrubber_control_selector_holo_light"
            android:track="@drawable/track_bg"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView7"
            android:layout_toStartOf="@+id/textView7"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vibrate"
            android:id="@+id/textView4"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/switchVibration"
            android:layout_toStartOf="@+id/switchVibration"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp" />

    </RelativeLayout>


</RelativeLayout>

